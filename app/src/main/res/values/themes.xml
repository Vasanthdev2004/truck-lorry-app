<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Shipment" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/urbani_regular</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16dp</item>
        <item name="android:height">42dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/urbani_extrabold</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="AppTheme.input" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">16dp</item>
        <item name="android:height">42dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/urbani_regular</item>
        <item name="android:gravity">start|center</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:background">@drawable/input_round_box</item>
    </style>

    <style name="Font">
        <item name="fontFamily">@font/urbani_extrabold</item>

    </style>
    <style name="ShapeAppearanceOverlay.Avatar" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="fontFamily">@font/urbani_regular</item>

    </style>
    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/tranfarnt</item>
        <item name="fontFamily">@font/urbani_regular</item>
    </style>
    <style name="RatingBar"  parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/purple_200</item>
        <item name="colorControlActivated">@color/teal_200</item>

    </style>
</resources>
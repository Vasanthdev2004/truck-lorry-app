    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="5dp"

        android:background="@drawable/rounded_box"
        app:cardCornerRadius="15dp">

       <ListView
           android:id="@+id/list"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/lvl_clicl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/input_round_box"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgt"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/trak" />

                <TextView
                    android:id="@+id/txt_lorrynumber"
                    style="@style/Font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_title"
                    style="@style/Font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txt_routs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_route"
                    android:drawablePadding="5dp"
                    android:gravity="center|start"
                    android:padding="5dp"
                    android:text=""
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txt_rcverification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_document_process"
                    android:drawablePadding="5dp"
                    android:gravity="center|start"
                    android:padding="5dp"
                    android:text="RC Verification"
                    android:textSize="12dp" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_edit"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignEnd="@+id/lvl_clicl"
        android:layout_marginTop="2dp"
        android:padding="5dp"
        android:backgroundTint="@color/purple_700"
        android:background="@drawable/circle"
        android:tint="@color/white"
        android:layout_marginEnd="-4dp"
        android:src="@drawable/edit_icon" />
</RelativeLayout>
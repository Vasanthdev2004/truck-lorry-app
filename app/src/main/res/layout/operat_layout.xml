<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/round_box"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ststs"
            android:tint="@color/purple_200" />

        <TextView
            android:id="@+id/txt_stats"
            style="@style/Font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txt_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_post_load_gray"
            android:drawablePadding="10dp"
            android:drawableTint="@color/gray0"
            android:padding="2dp"
            android:text=""
            android:textSize="10dp" />

        <TextView
            android:id="@+id/txt_lorry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_find_lorry_gray"
            android:drawablePadding="10dp"
            android:drawableTint="@color/gray0"
            android:padding="2dp"
            android:text=""
            android:textSize="10dp" />
    </LinearLayout>
</LinearLayout>